
<%- model_class = LocalityService -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class='dl-horizontal'>
  <dt><strong><%= model_class.human_attribute_name(:service_id) %>:</strong></dt>
  <dd><%= @locality_service.service.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:locality_id) %>:</strong></dt>
  <dd><%= @locality_service.locality.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_active) %>:</strong></dt>
  <dd><%= @locality_service.is_active %></dd>
</dl>

<%= link_to t('.back', default: t('helpers.links.back')),
              locality_services_path, class: 'btn btn-default'  %>
<%= link_to t('.edit', default: t('helpers.links.edit')),
              edit_locality_service_path(@locality_service), class: 'btn btn-default' %>
<%= link_to t('.destroy', default: t('helpers.links.destroy')),
              locality_service_path(@locality_service),
              method: 'delete',
              data: { confirm: t('.confirm', default: t('helpers.links.confirm',
              default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
