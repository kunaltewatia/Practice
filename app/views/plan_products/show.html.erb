<%- model_class = PlanProduct -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class='dl-horizontal'>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @plan_product.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:package_id) %>:</strong></dt>
  <dd><%= @plan_product.package_id %></dd>
  <dt>
    <strong><%= model_class.human_attribute_name(:measurement_id) %>:</strong></dt>
  <dd><%= @plan_product.measurement_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @plan_product.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @plan_product.quantity %></dd>
</dl>

<%= link_to t('.back', default: t('helpers.links.back')),
              :back, class: 'btn btn-default'  %>
<%= link_to t('.edit', default: t('helpers.links.edit')),
              edit_plan_product_path(@plan_product), class: 'btn btn-default' %>
<%= link_to t('.destroy', default: t('helpers.links.destroy')),
              plan_product_path(@plan_product),
              :method: 'delete',
              data: { confirm: t('.confirm', default: t('helpers.links.confirm',
              default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
