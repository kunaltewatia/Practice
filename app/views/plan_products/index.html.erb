<%- model_class = PlanProduct -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:package_id) %></th>
      <th><%= model_class.human_attribute_name(:measurement_id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%=t '.actions', default: t('helpers.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @plan_products.each do |plan_product| %>
      <tr>
        <td><%= link_to plan_product.id, plan_product_path(plan_product) %></td>
        <td><%= plan_product.product_id %></td>
        <td><%= plan_product.package_id %></td>
        <td><%= plan_product.measurement_id %></td>
        <td><%= plan_product.date %></td>
        <td><%= plan_product.quantity %></td>
        <td>
          <%= link_to t('.edit', default: t('helpers.links.edit')),
                      edit_plan_product_path(plan_product), class: 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', default: t('helpers.links.destroy')),
                      plan_product_path(plan_product),
                      method: :delete,
                      data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) },
                      class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @plan_products, renderer: BootstrapPagination::Rails %>

<%= link_to t('.new', default: t('helpers.links.new')),
            new_plan_product_path,
            class: 'btn btn-primary' %>
