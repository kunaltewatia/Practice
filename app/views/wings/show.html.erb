<%- model_class = Wing -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class='dl-horizontal'>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @wing.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:society_id) %>:</strong></dt>
  <dd><%= @wing.society.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_active) %>:</strong></dt>
  <dd><%= @wing.is_active %></dd>
</dl>

<%= link_to t('.back',
              default: t('helpers.links.back')),
              :back,
              class: 'btn btn-default'  %>
<%= link_to t('.edit',
              default: t('helpers.links.edit')),
              edit_wing_path(@wing),
              class: 'btn btn-default' %>
<%= link_to t('.destroy', default: t('helpers.links.destroy')),
              wing_path(@wing),
              method: 'delete',
              data: {
                confirm: t('.confirm',
                           default: t('helpers.links.confirm',
                                      default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
