<%- model_class = Society -%>
<div class='page-header'>
  <h1>
    <%=t '.title', default: model_class.model_name.human.titleize %>
  </h1>
</div>

<dl class='dl-horizontal'>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @society.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:locality_id) %>:</strong></dt>
  <dd><%= @society.locality.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @society.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longlatitude) %>:</strong></dt>
  <dd><%= @society.longlatitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_active) %>:</strong></dt>
  <dd><%= @society.is_active %></dd>
</dl>

<%= link_to t('.back',
              default: t('helpers.links.back')),
              :back,
              class: 'btn btn-default'  %>
<%= link_to t('.edit',
              default: t('helpers.links.edit')),
              edit_society_path(@society),
              class: 'btn btn-default' %>
<%= link_to t('.destroy',
              default: t('helpers.links.destroy')),
              society_path(@society),
              method: 'delete',
              data: {
                confirm: t('.confirm',
                           default: t('helpers.links.confirm',
                                    default: 'Are you sure?'))
              },
              class: 'btn btn-danger' %>
