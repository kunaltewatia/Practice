<%- model_class = FaqQuestion -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class='dl-horizontal'>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @faq_question.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @faq_question.description.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:faq_category_id) %>:</strong></dt>
  <dd><%= @faq_question.faq_category.name unless @faq_question.faq_category.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_active) %>:</strong></dt>
  <dd><%= @faq_question.is_active %></dd>
</dl>

<%= link_to t('.back', default: t('helpers.links.back')),
              faq_category_faq_questions_path(@faq_question.faq_category_id), class: 'btn btn-default'  %>
<%= link_to t('.edit', default: t('helpers.links.edit')),
              edit_faq_path(@faq_question), class: 'btn btn-default' %>
<%= link_to t('.destroy', default: t('helpers.links.destroy')),
              delete_faq_path(@faq_question),
              method: 'delete',
              data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
