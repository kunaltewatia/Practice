<%- model_class = Referral -%>
<div class='page-header'>
  <h1>
    <%=t '.title', default: model_class.model_name.human.pluralize.titleize %>
  </h1>
</div>
<div>
  <%= link_to 'Add New Referral', new_referral_path, class: 'btn btn-primary' %>
  <br/><br/>
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#waited_tab" aria-controls="received" role="tab" data-toggle="tab">Waited<span class="badge"><%=@waited.count%></span></a>
    </li>
    <li role="presentation">
      <a href="#converted_tab" aria-controls="accepted" role="tab" data-toggle="tab">Converted<span class="badge"><%=@converted.count%></span></a>
    </li>
  </ul>
</div>
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="waited_tab">
    <table class='table table-striped table-hover'>
      <%= render 'table_header' %>
      <tbody>
        <% @waited.each do |referral| %>
          <%= render partial: 'table_body', locals: { referral: referral } %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div role="tabpanel" class="tab-pane" id="converted_tab">
   <table class='table table-striped table-hover'>
      <%= render 'table_header' %>
      <tbody>
        <% @converted.each do |referral| %>
          <%= render partial: 'table_body', locals: { referral: referral } %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>