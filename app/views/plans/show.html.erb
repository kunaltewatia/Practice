<%- model_class = Plan -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class='dl-horizontal'>
  <dt><strong><%= model_class.human_attribute_name(:pack_id) %>:</strong></dt>
  <dd><%= @plan.pack.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @plan.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @plan.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:old_price) %>:</strong></dt>
  <dd><%= @plan.old_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @plan.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:days) %>:</strong></dt>
  <dd><%= @plan.days %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_active) %>:</strong></dt>
  <dd><%= @plan.is_active %></dd>
</dl>

<%= link_to t('.back', default: t('helpers.links.back')),
              plans_path, class: 'btn btn-default'  %>
<%= link_to t('.edit', default: t('helpers.links.edit')),
              edit_plan_path(@plan), class: 'btn btn-default' %>
<%= link_to t('.destroy', default: t('helpers.links.destroy')),
              plan_path(@plan),
              method: 'delete',
              data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
