
<%= form_for @pack, html: { class: 'form-horizontal pack' } do |f| %>

    <% if @pack.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= pluralize(@pack.errors.count, 'error') %> prohibited this pack from being saved:</h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @pack.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='control-group'>
    <%= f.label :service_id, class: 'form-label' %>
    <div class='controls'>
      <%= f.select :service_id, options_from_collection_for_select(@services, 'id', 'name', @pack.service_id), { prompt: 'Select Service' },{class: 'form-control'} %>
    </div>
    <%= error_span(@pack[:service_id]) %>
  </div>
  <div class='control-group'>
    <%= f.label :name, class: 'form-label' %>
    <div class='controls'>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <%= error_span(@pack[:name]) %>
  </div>
  <div class='control-group'>
    <%= f.label :description, class: 'form-label' %>
    <div class='controls'>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <%= error_span(@pack[:description]) %>
  </div>
  <div class='control-group'>
    <%= f.label :is_active, class: 'form-label' %>
    <div class='controls'>
      <%= f.check_box :is_active, class: 'form-control' %>
    </div>
    <%= error_span(@pack[:is_active]) %>
  </div>
  <div class='control-group'>
    <%= f.label :is_visible, class: 'form-label' %>
    <div class='controls'>
      <%= f.check_box :is_visible, class: 'form-control' %>
    </div>
    <%= error_span(@pack[:is_visible]) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary' %>
  <%= link_to t('.cancel', default: t('helpers.links.cancel')),
            packs_path, class: 'btn btn-default' %>

<% end %>
