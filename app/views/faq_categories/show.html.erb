<%- model_class = FaqCategory -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class='dl-horizontal'>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @faq_category.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @faq_category.description.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_id) %>:</strong></dt>
  <dd><%= @faq_category.service.name if @faq_category.service %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_active) %>:</strong></dt>
  <dd><%= @faq_category.is_active %></dd>
</dl>

<%= link_to t('.back', default: t('helpers.links.back')),
              :back, class: 'btn btn-default'  %>
<%= link_to t('.edit', default: t('helpers.links.edit')),
              edit_faq_category_path(@faq_category), class: 'btn btn-default' %>
<%= link_to t('.destroy', default: t('helpers.links.destroy')),
              faq_category_path(@faq_category),
              method: 'delete',
              data: {
                confirm: t('.confirm',
                           default: t('helpers.links.confirm',
                                      default: 'Are you sure?'))
              },
              class: 'btn btn-danger' %>
