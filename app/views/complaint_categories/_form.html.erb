<%= form_for @complaint_category, html: { class: 'form-horizontal complaint_category' } do |f| %>
  <% if @complaint_category.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'>
          <%= pluralize(@complaint_category.errors.count, 'error') %>
          prohibited this complaint category from being saved:
        </h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @complaint_category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='control-group'>
    <%= f.label :name, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <%= error_span(@complaint_category[:name]) %>
  </div>

  <div class='control-group'>
    <%= f.label :description, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <%= error_span(@complaint_category[:description]) %>
  </div>

  <div class='control-group'>
    <%= f.label :is_active, class: 'control-label' %>
    <div class='controls'>
      <%= f.check_box :is_active, class: 'form-control' %>
    </div>
    <%= error_span(@complaint_category[:is_active]) %>
  </div>
  <br/>

  <%= f.submit nil, class: 'btn btn-primary' %>
  <%= link_to t('.cancel', default: t('helpers.links.cancel')),
            complaint_categories_path, class: 'btn btn-default' %>
<% end %>