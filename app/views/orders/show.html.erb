<%- model_class = Order -%>
<div class='page-header'>
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<dl class='dl-horizontal'>
  <dt>
    <strong><%= model_class.human_attribute_name("Order Id") %>:
    </strong></dt>
  <dd><%= @order.txt_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @order.user_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @order.mobile_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:plan) %>:</strong></dt>
  <dd><%= "Rs: #{@order.plan_price}/- per #{@order.plan_unit}" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @order.unit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sub_total) %>:</strong></dt>
  <dd><%= @order.plan_price.to_i *  @order.unit.to_i %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount) %>:</strong></dt>
  <dd><%= @order.discount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
  <dd><%= @order.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transection_date) %>:</strong></dt>
  <dd><%= @order.created_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_date) %>:</strong></dt>
  <dd><%= @order.delivery_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @order.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area) %>:</strong></dt>
  <dd><%= @order.area.name %></dd>
</dl>

<%= link_to t('.back', default: t('helpers.links.back')),
              :back, class: 'btn btn-default'  %>
